<UserControl x:Class="DSI.Desktop.Views.MonitorExecucaoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:DSI.Desktop.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource BackgroundBrush}">
    
    <!-- DataContext será setado pelo MainWindow via DI -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
            <RowDefinition Height="Auto"/> <!-- Cards -->
            <RowDefinition Height="*"/>    <!-- Logs -->
            <RowDefinition Height="Auto"/> <!-- Actions -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Execução em Andamento" FontSize="26" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="{Binding NomeJob}" FontSize="18" Foreground="#666666" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Status & Progress -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20" Effect="{StaticResource DefaultShadow}">
            <StackPanel>
                <DockPanel LastChildFill="False" Margin="0,0,0,10">
                    <TextBlock Text="{Binding StatusTexto}" FontSize="16" FontWeight="SemiBold" Foreground="#1976D2" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Progresso, StringFormat='{}{0:0}%'}" DockPanel.Dock="Right" FontSize="20" FontWeight="Bold" Foreground="#1976D2"/>
                </DockPanel>
                
                <ProgressBar Value="{Binding Progresso}" Height="15" BorderThickness="0" Background="#E0E0E0" Foreground="#1976D2">
                    <ProgressBar.Clip>
                        <RectangleGeometry Rect="0,0,800,15" RadiusX="7.5" RadiusY="7.5"/>
                    </ProgressBar.Clip>
                </ProgressBar>
                
                <TextBlock Text="{Binding MensagemAtual}" Margin="0,10,0,0" Foreground="Gray" FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Cards de Estatísticas -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Processadas -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,10,0" Effect="{StaticResource DefaultShadow}">
                <StackPanel>
                    <TextBlock Text="Total Processado" Foreground="#666" FontSize="14"/>
                    <TextBlock Text="{Binding LinhasProcessadas}" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card Sucesso -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15" Margin="5,0,5,0" Effect="{StaticResource DefaultShadow}">
                <StackPanel>
                    <TextBlock Text="Linhas com Sucesso" Foreground="#4CAF50" FontSize="14"/>
                    <TextBlock Text="{Binding LinhasSucesso}" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Card Erros -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15" Margin="10,0,0,0" Effect="{StaticResource DefaultShadow}">
                <StackPanel>
                    <TextBlock Text="Linhas com Erro" Foreground="#F44336" FontSize="14"/>
                    <TextBlock Text="{Binding LinhasErro}" FontSize="24" FontWeight="Bold" Foreground="#F44336" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Logs Console -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" Padding="10" Margin="0,0,0,20">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Console de Eventos" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,5"/>
                <ListBox ItemsSource="{Binding Logs}" 
                         Background="Transparent" 
                         BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Foreground="#DDDDDD" FontFamily="Consolas">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0,2"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar Execução" 
                    Command="{Binding CancelarCommand}"
                    Background="#F44336" Foreground="White" Width="150" Padding="10"
                    Visibility="{Binding EstaExecutando, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button Content="Voltar ao Dashboard" 
                    Click="BtnVoltar_Click"
                    Background="Gray" Foreground="White" Width="150" Padding="10" Margin="10,0,0,0"
                    Visibility="{Binding EstaExecutando, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
        </StackPanel>
    </Grid>
</UserControl>
