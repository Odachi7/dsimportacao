<Window x:Class="DSI.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:DSI.Desktop.Views"
        Title="Ds Importer - Sistema de Importação ETL" 
        Height="800" Width="1400"
        WindowState="Maximized"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu Lateral -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel>
                <!-- Logo/Título -->
                <Border Margin="20" Background="#1976D2" Padding="15" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="📊 DS Importer" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Sistema ETL" FontSize="12" Foreground="#B3E5FC" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Botões de Navegação -->
                <Button x:Name="BtnDashboard" Content="📊 Dashboard" 
                        Click="BtnDashboard_Click" 
                        Style="{StaticResource MenuButton}" Margin="10,20,10,5"/>
                
                <Button x:Name="BtnConexoes" Content="🔌 Conexões" 
                        Click="BtnConexoes_Click"
                        Style="{StaticResource MenuButton}" Margin="10,5"/>
                
                <Button x:Name="BtnJobs" Content="⚙️ Jobs ETL" 
                        Click="BtnJobs_Click"
                        Style="{StaticResource MenuButton}" Margin="10,5"/>
                
                <Button x:Name="BtnMonitor" Content="📈 Monitor" 
                        Click="BtnMonitor_Click"
                        Style="{StaticResource MenuButton}" Margin="10,5"/>
                
                <Button x:Name="BtnHistorico" Content="📜 Histórico" 
                        Click="BtnHistorico_Click"
                        Style="{StaticResource MenuButton}" Margin="10,5"/>

                <Separator Margin="20,30" Background="#64B5F6"/>

                <Button Content="⚙️ Configurações" 
                        Style="{StaticResource MenuButton}" Margin="10,5"/>
                
                <Button Content="❓ Ajuda" 
                        Style="{StaticResource MenuButton}" Margin="10,5"/>
            </StackPanel>
        </Border>

        <!-- Área de Conteúdo -->
        <ContentControl x:Name="ContentArea" Grid.Column="1"/>
    </Grid>

    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
